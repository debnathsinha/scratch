<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <jmxConfigurator/>
  <appender
    name="console"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <Pattern>%d [%thread] %-5level MDC[%X] %logger{36} - %msg%n</Pattern>
    </encoder>

  </appender>


  <root>
    <level value="INFO"/>
    <appender-ref ref="console"/>
  </root>

</configuration>